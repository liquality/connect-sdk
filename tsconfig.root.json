{
  "compilerOptions": {
    "incremental": true,
    "declaration": true,
    "sourceMap": false,
    "composite": true,
    "types": ["mocha", "chai", "node", "jest"],
    "typeRoots": ["./node_modules/@types"],
    "lib": ["es2021"],
    "target": "ES6",
    "esModuleInterop": true,
    "noImplicitAny": false,
    "strict": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "baseUrl": ".",
    "forceConsistentCasingInFileNames": true
  }
}
